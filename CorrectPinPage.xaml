<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PinPadApp.CorrectPinPage"
    Title="Your PIN was correct">

    <Grid
        BackgroundColor="#80ff80"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">

        <VerticalStackLayout
            HorizontalOptions="Center"
            Padding="50"
            VerticalOptions="Center">

            <Label
                FontAttributes="Bold"
                FontSize="32"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,20"
                Text="Congratulations!"
                TextColor="#005a00" />

            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="You have successfully entered the correct PIN number."
                HorizontalTextAlignment="Center"
                TextColor="#005a00" />

        </VerticalStackLayout>

    </Grid>

</ContentPage> 